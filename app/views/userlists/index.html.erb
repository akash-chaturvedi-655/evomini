<p id="notice"><%= notice %></p>

<h1>Userlists</h1>
<br>
<%= link_to 'Create New Userlist', new_userlist_path %>
<br></br>

<table class="table table_hover">
  <thead>
    <tr>
      <th>Your User Id</th>
      <th>Topic</th>
      <th>Receipients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @userlists.each do |userlist| %>
      <tr>
        <td><%= userlist.user_id %></td>
        <td><%= userlist.topic %></td>
        <td><%= userlist.receipients %></td>
        <td><%= link_to 'View', userlist %></td>
        <td><%= link_to 'Edit', edit_userlist_path(userlist) %></td>
        <td><%= link_to 'Delete', userlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

